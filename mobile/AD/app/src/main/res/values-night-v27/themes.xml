<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (API 27+ 夜间，含 windowLightNavigationBar)。 -->
    <style name="Base.Theme.ADMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <style name="Theme.ADMobile" parent="Base.Theme.ADMobile" />

    <style name="Theme.ADMobile.NoActionBar" parent="Theme.ADMobile">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
