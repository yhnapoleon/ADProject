<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (API 27+，含 windowLightNavigationBar)。 -->
    <style name="Base.Theme.ADMobile" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.ADMobile" parent="Base.Theme.ADMobile" />

    <style name="Theme.ADMobile.NoActionBar" parent="Theme.ADMobile">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="App.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">56dp</item>
        <item name="android:height">40dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
        <item name="android:color">#D5CCEF</item>
    </style>
</resources>
