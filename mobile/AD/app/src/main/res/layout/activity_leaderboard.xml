<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <View
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="#674fa3"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIconTint="#FFFFFF"
        app:title="Carbon Ranking"
        app:titleCentered="true"
        app:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/tab_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_tab_outline"
        android:orientation="horizontal"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:id="@+id/tv_daily"  android:layout_width="80dp"
            android:layout_height="32dp"
            android:background="@drawable/shape_tab_selected"
            android:gravity="center"
            android:text="Daily"
            android:textColor="#674fa3"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_monthly" android:layout_width="80dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="Monthly"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="20dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tab_container">

        <include
            android:id="@+id/rank2"
            layout="@layout/item_podium_user"
            android:layout_width="100dp"
            android:layout_height="190dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rank1"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent" />

        <include
            android:id="@+id/rank1"
            layout="@layout/item_podium_user"
            android:layout_width="110dp"
            android:layout_height="220dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/rank3"
            app:layout_constraintStart_toEndOf="@id/rank2" />

        <include
            android:id="@+id/rank3"
            layout="@layout/item_podium_user"
            android:layout_width="100dp"
            android:layout_height="175dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/rank1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ranking_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/shape_list_corner"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        tools:listitem="@layout/item_ranking_row" />

    <LinearLayout
        android:id="@+id/bottom_navigation_container"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bottom_nav_background"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/navigation_home"
            android:scaleType="centerInside"
            android:padding="18dp" />

        <ImageView
            android:id="@+id/nav_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/navigation_rank"
            android:scaleType="centerInside"
            android:padding="18dp" />

        <ImageView
            android:id="@+id/nav_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/navigation_chat"
            android:scaleType="centerInside"
            android:padding="18dp" />

        <ImageView
            android:id="@+id/nav_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/navigation_person"
            android:scaleType="centerInside"
            android:padding="18dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>