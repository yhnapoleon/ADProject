<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F6">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tree_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="#674fa3"
        app:title="My Carbon Forest"
        app:titleCentered="true"
        app:titleTextColor="#333333"
        app:layout_constraintTop_toTopOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_day_night_switch"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tree_toolbar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/shape_pts_badge"
        android:padding="8dp"
        android:elevation="5dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tree_toolbar">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/winner1" />
        <TextView
            android:id="@+id/tv_trees_planted_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Trees: 5"
            android:textColor="#674fa3"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_float_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_tip_bubble"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:text="Growth +5%"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:elevation="15dp"
        app:layout_constraintBottom_toTopOf="@+id/lottie_plant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="100dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_plant"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/lottie_background"
        app:layout_constraintVertical_bias="0.5" />

    <ProgressBar
        android:id="@+id/tree_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:elevation="10dp"
        android:progressTint="#4CAF50"
        android:progressBackgroundTint="#40FFFFFF"
        android:scaleY="4"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#CCFFFFFF"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_today_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Steps: 9277"
                android:textColor="#674fa3"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_convert_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Convert to Growth"
                android:textAllCaps="false"
                app:cornerRadius="20dp"
                app:backgroundTint="#674fa3" />

            <TextView
                android:id="@+id/tv_carbon_impact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Your carbon reduction from walking is equivalent to..."
                android:textColor="#333333"
                android:textSize="13sp"
                android:textAlignment="center" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_celebration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_rawRes="@raw/celebration"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

</androidx.constraintlayout.widget.ConstraintLayout>